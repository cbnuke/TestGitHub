<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.cbnuke.testgithub.MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginStart="54dp"
            android:layout_marginTop="126dp"
            android:layout_toEndOf="@+id/textView"
            android:text="@string/txtHello"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            tools:text="@string/txtHello" />

        <Button
            android:text="@string/btnJim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:id="@+id/btnJim" />

        <Button
            android:text="@string/btnMeen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMeen"
            android:layout_below="@+id/btnJim"
            android:layout_alignStart="@+id/btnJim"
            android:layout_marginTop="26dp" />

        <Button
            android:text="@string/btnKaew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnMeen"
            android:layout_alignStart="@+id/btnMeen"
            android:layout_marginTop="25dp"
            android:id="@+id/btnKaew" />
    </RelativeLayout>
</layout>
